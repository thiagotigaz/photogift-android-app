<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="client.potlach.com.potlachandroid.fragment.HomeChainFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:text="Latest Created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/latestChainsListView"
                android:layout_width="fill_parent"
                android:layout_height="230dp"
                android:background="#ddd"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:text="Followers Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/followersCountChainsListView"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:background="#ddd"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

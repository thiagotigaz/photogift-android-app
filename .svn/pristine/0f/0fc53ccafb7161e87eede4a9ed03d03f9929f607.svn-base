            if(exception!=null)
                Toast.makeText(
                        LoginActivity.this,
                        "Wrong Login or Password!",
                        Toast.LENGTH_SHORT).show();
            else{
                app.setLoggedUser(user);
                startActivity(new Intent(
                        LoginActivity.this,
                        HomeActivity.class));

                finish();
            }
            dismissProgressDialog();
        }


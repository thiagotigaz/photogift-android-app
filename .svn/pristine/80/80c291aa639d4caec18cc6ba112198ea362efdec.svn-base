<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="client.potlach.com.potlachandroid" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PhotoGiftApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChainListActivity"
            android:label="@string/title_activity_giftchain_list" >
        </activity>
        <activity
            android:name=".activity.GiftListActivity"
            android:label="@string/title_activity_gift_list" >
        </activity>
        <activity
            android:name=".activity.PostGiftActivity"
            android:label="@string/title_activity_post_gift" >
        </activity>
        <activity
            android:name=".activity.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>

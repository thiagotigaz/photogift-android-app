<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">


        <ImageView
            android:id="@+id/post_gift_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/image_holder"
            android:tag="defaultImageHolder"/>

        <EditText
            android:id="@+id/post_gift_title_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/activity_post_gift_title" />

        <EditText
            android:id="@+id/post_gift_description_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="@string/activity_post_gift_description"
            android:inputType="textMultiLine" />

        <AutoCompleteTextView
            android:id="@+id/post_gift_chain_title_autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_post_gift_chain_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_post_gift_button"
            android:id="@+id/post_gift_button"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
